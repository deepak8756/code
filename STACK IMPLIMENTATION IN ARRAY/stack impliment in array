#include<bits/stdc++.h>
using namespace std;

class Stack{
  public:
  int top;
  int *arr;
  int size;

  Stack(int size){
    this->size=size;
    arr=new int[size];//yha dynamically size de rhe hai heap meeh is line ko google krlo ye size derha hai array ko new keyword jo hai
    top=-1;
  }

  void push(int element){
    if(size-top>1){
      top++;
      arr[top]=element;
    }
    else{
      cout<<" Stack overflow "<<endl;
    }
  }
  void pop(){
    if(top>=0){
      top--;
    }
    else{
      cout<<" Stack underflow "<<endl;
    }

  }
  int peek(){
    if(top>=0)
    {
      return arr[top];
    }
    else{
      cout<<" Stack is Empty "<<endl;
      return -1;
    }

  }
  bool isEmpty(){
    if(top ==-1){
      return true;
    }
    else{
      return false;
    }
  }

};

int main()
{
  Stack st(5);//stack bnaya st aur size dedi iski 5

  st.push(22);
  st.push(43);
  st.push(44);
  st.push(24);
  st.push(43);
  st.push(44);

  cout<<st.peek()<<endl;

  st.pop();
   cout<<st.peek()<<endl;

   st.pop();
   cout<<st.peek()<<endl;

   st.pop();
   cout<<st.peek()<<endl;

  if(st.isEmpty()){
    cout<<" stack is empty mere dost "<<endl;
  }
  else{
        cout<<" stack is not empty mere dost "<<endl;

  }
    st.pop();
     cout<<st.peek()<<endl;

     st.pop();
     cout<<st.peek()<<endl;//khali krdiya pop kra kra ke empty
     



  return 0;
}
