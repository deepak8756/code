//c---------DOUBLY LINKED LIST MEEH INSERTION HAR TRAH KE HEAD, TAIL,MIDDLE,START LAST-----------
#include<bits/stdc++.h>
using namespace std;

class Node{
    public:
    int data;
    Node* prev;
    Node* next;

    Node(int data){
        this->data=data;
        this->prev=NULL;
        this->next=NULL;
    }
};
//insert at head ke through doubly linked list meeh input diya
void insertAtHead(Node* &head,int value){
    Node* temp=new Node(value);

    temp->next=head;
    head->prev=temp;
    head=temp;
}

//insert at tail ke through doubly linked list meeh input diya
void insertAtTail(Node* &tail,int value){
    Node* temp=new Node(value);

    tail->next=temp;
    temp->prev=tail;
    tail=temp;   

}
// insert at any position
void insertAtPosition(Node* &head,Node* &tail,int position,int value){
    if(position==1){// AGAR 1ST POSITION PAR INSERT KRNA HAI
        Node* temp=new Node(value);
        temp->prev=NULL;//ya yha insert at head wala function likh do ya ye code likhlo pura
        temp->next=head;
        head->prev=temp;
        head=temp;
        return;
    }

    Node* temp=head;
    int counter=1;

    while(counter<position-1){
        temp=temp->next;
        counter++;
    }
    //. last node ko tail bnana tha ussi ke liye conditon aur last par insert krna hai to ye
    if(temp->next==NULL){
        Node* lastnode=new Node(value);
        temp->next=lastnode;
        lastnode->prev=temp;
        lastnode->next=NULL;
        tail=lastnode;
        return;
    }
//. otherwise middle meeh khi insert krna hai to ye                    
    Node* insert=new Node(value);
    insert->next=temp->next;
    temp->next->prev=insert;//confusion hai ye 4 line shi see smjho
    temp->next=insert;
    insert->prev=temp;

}

void print(Node* &head){
    Node* temp=head;

    while(temp!=NULL){
        cout<<temp->data<<" ";
        temp=temp->next;
    }
    cout<<endl;
}

int main()
{
    Node* node1=new Node(10);
    Node* head= node1;
    Node* tail= node1;

//  insert at head meeh input bhej rha hu   
    // insertAtHead(head,20);
    // print(head);

    // insertAtHead(head,30);
    // print(head);

    // insertAtHead(head,40);
    // print(head);

    // insertAtHead(head,50);
    // print(head);

    // insertAtHead(head,60);
    // print(head);
//*************************************************************

// insert at tail meeh input bhej rha hu
     insertAtTail(tail,20);
    print(head);

    insertAtTail(tail,30);
    print(head);

    insertAtTail(tail,40);
    print(head);

    insertAtTail(tail,50);
    print(head);

    insertAtTail(tail,60);
    print(head);
//*********************************************************
// insertion at any position

    insertAtPosition(head,tail,1,420);
    print(head);
    insertAtPosition(head,tail,4,520);
    print(head);
    insertAtPosition(head,tail,9,720);
    print(head);

    //check kralo head aur tail ko print krke shi hai ya nhi

    cout<<head->data<<" "<<head->prev<<endl;
    cout<<tail->data<<" "<<tail->prev<<endl;
  
    return 0;
}
