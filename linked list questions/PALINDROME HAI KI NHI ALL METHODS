//1 METHODS LINKED LIST KI SIZE NIKA LO THEN UTNE SIZE KA ARRAY BNALO AUR LINKED LIST KA DATA ARRAY MEEH COPY KRLO AUR ARRAY KO CHECK KRLO PALINDROME HAI 
//KI NHI AGAR HUI TO SMJH JAO LINKED LIST PALINDROME HAI AGAR ARRAY NHI HUA PALINDROME TO SMJH JAO LINKED PALINDROME NHI HAI
//LINE 85 PDHO IMPORTANT LIKHA HAI WHA KUCH MUST READ

//TIME COMPLEXITY O(N)
//SPACE COMPLEXITY O(N) KYU KYUKI VECTOR BNAYA AUR ARRAY BNAOGE TO EXTRA SPACE LELI

#include<bits/stdc++.h>
using namespace std;

class Node{
  public:
  int data;
  Node* next;

  Node(int data){
    this->data=data;
    this->next=NULL;
  }
};

void insertAtTail(Node* &tail,int data)
{
  Node* temp=new Node(data);

  tail->next=temp;
  tail=temp;
}

void print(Node* head){
  Node* temp=head;

  while(temp!=NULL)
  {
    cout<<temp->data<<" ";
    temp=temp->next;
  }
  cout<<endl;
}

int count(Node* head){//count kr rha hu linked list ki size
  int counter=0;

  Node* temp=head;
  while(temp!=NULL)
  {
    counter++;
    temp=temp->next;
  }
 return counter;
}

void copy(Node* head,int a[])//linked list ko copy kr rha hu array meeh
{
  Node*temp=head;
  int i=0;
  while(temp!=NULL)
  {
    a[i]=temp->data;
    temp=temp->next;
    i++;
  }
}
int main()
{
  Node* node1=new Node(10);
  Node* head=node1;
  Node* tail=node1;

  insertAtTail(tail,20);
  print(head);
  insertAtTail(tail,30);
  print(head);
  insertAtTail(tail,40);
  print(head);
  insertAtTail(tail,40);
  print(head);
  insertAtTail(tail,30);
  print(head);
  insertAtTail(tail,20);
  print(head);
  insertAtTail(tail,10);
  print(head);

  int n;
  n=count(head);//n ke andar linked list ki size le li jo bhi hogi

  int a[n];//array bna liya utni size ka jitni size ka linked list hai  IMPORTANT** yha vector bnate to size na nikalna pdta sidhe pushback kradete

  copy(head,a);//copy kra diya linked list ko array meeh head bhej diya aur array bhej diya upar

  for(int i=0;i<n;i++)//print krake check kr rha hu shi copy kiya hai ki nhi
  {
    cout<<a[i]<<" ";
  }
  cout<<endl;

  int left=0;//palindrome check kralo ab array meeh jo linked list ko copy kiye ho
  //isee pta chal jaega linked palindrome hai ki nhi hai
  int right=n-1;//do pointer bna liya na agee piche lha lo left right ko 

  while(left<right)
  {
    if(a[left]==a[right])
    {
      left++;
      right--;
    }
    else{
      cout<<"not palindrome"<<endl;
      return 0;
    }
  }
  cout<<"palindrome"<<endl;
  return 0;
}
